doctype html
html(lang="en")
  head
    title= 'ICC Men\'s T20 World Cup'
    script(type='text/javascript', src='https://cdn.tailwindcss.com')
    script.
      document.addEventListener('DOMContentLoaded', function() {
        const playerLinks = document.querySelectorAll('.player-link');
        playerLinks.forEach(link => {
          link.addEventListener('click', function(event) {
            event.preventDefault();
            const playerId = link.getAttribute('href').split('/').pop();
            window.location.href = `/player-details/${playerId}`;
          });
        });
      });
  body
    header(class="text-white bg-indigo-500")
      div(class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center")
        a(class="flex title-font font-medium items-center text-gray-900 mb-4 md:mb-0")
        span(class="ml-3 text-xl") Cricket Dashboard
    section(class="text-gray-600 body-font overflow-hidden")
      h1(class="text-3xl font-medium title-font text-gray-900 px-8") ICC Men's T20 World Cup Final
      div(class="container px-5 py-24 mx-auto")
        div(class="flex flex-wrap -m-12")
          div(class="px-8 md:w-1/3 flex flex-col items-start")
            span(class="inline-block py-1 px-2 rounded bg-indigo-50 text-indigo-500 text-xs font-medium tracking-widest") Team
            h2(class="sm:text-3xl text-2xl title-font font-medium text-gray-900 mt-4 mb-4") South Africa
            p(class="leading-relaxed mb-8 title-font") Players:
            each player in teamInfo.data
              if player.country === 'South Africa'
                a(href=`/player-details/${player.id}`, class="player-link mb-5", style="text-decoration: underline;")=player.name
          div(class="py-2 md:w-1/3 flex flex-col items-start")
            span(class="inline-block py-1 px-2 rounded bg-indigo-50 text-indigo-500 text-xs font-medium tracking-widest") Team
            h2(class="sm:text-3xl text-2xl title-font font-medium text-gray-900 mt-4 mb-4") India
            p(class="leading-relaxed mb-8 title-font") Players:
            each player in teamInfo.data
              if player.country === 'India'
                a(href=`/player-details/${player.id}`, class="player-link mb-5", style="text-decoration: underline;")=player.name

